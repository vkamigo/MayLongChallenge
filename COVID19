import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;

public class AnotherSequence {

	static BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

	public static void main(String[] args) throws IOException {

		String testcase = br.readLine();
		String[] t = testcase.split(" ");
		int T = Integer.parseInt(t[0]);

		for (int k = 0; k < T; k++) {
			String Nstr = br.readLine();
			String[] N_arr = Nstr.split(" ");
			int N = Integer.parseInt(N_arr[0]);

			int arr[] = new int[N];

			String intput = br.readLine();
			String[] split_input = intput.split(" ");

			for (int j = 0; j < N; j++)
				arr[j] = Integer.parseInt(split_input[j]);

			int count = 1;
			ArrayList<Integer> count_list = new ArrayList<Integer>();
			
			for (int y = 0; y < N-1; y++) {
				if((arr[y + 1] - arr[y]) <= 2)
					count++;
				else {
					count_list.add(count);
					count = 1;
				}
					
				if(y == N-2)
					count_list.add(count);
			}
			
			
			Collections.sort(count_list);
			System.out.println(count_list.get(0) + " " + count_list.get(count_list.size() - 1));
		}
	}
}
